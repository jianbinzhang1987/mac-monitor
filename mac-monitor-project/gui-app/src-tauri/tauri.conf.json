{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Mac Monitor",
    "version": "0.1.0",
    "identifier": "com.mac-monitor-gui.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:5173",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Mac Monitor",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "dmg",
            "app"
        ],
        "macOS": {
            "frameworks": [],
            "minimumSystemVersion": "10.13"
        },
        "icon": [
            "icons/icon.png"
        ],
        "externalBin": [
            "bin/vpn-helper",
            "bin/traffic-proxy",
            "bin/AuditService"
        ],
        "resources": []
    }
}